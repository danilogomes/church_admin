<%- model_class = Ministry -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ministry_name) %>:</strong></dt>
  <dd><%= @ministry.ministry_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:leader_name) %>:</strong></dt>
  <dd><%= @ministry.cpf %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @ministry.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripion_ministry) %>:</strong></dt>
  <dd><%= @ministry.street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @ministry.active %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ministries_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ministry_path(@ministry), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ministry_path(@ministry),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
